{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "ngx-persistent-repository": [
        "dist/ngx-persistent-repository/ngx-persistent-repository",
        "dist/ngx-persistent-repository"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "typedocOptions": {
    "out": "docs",
	"includeVersion": true,
	"exclude": "**/public-api.ts",
	"excludePrivate": true, 
	"exclude": ["**/*-test.*", "**/*.spec.ts", "**/*.module.ts"],
	"source": "src/lib"
  }
}
